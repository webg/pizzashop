<h2>Welcome to Pizza Shop</h2>
<div class="row">
	<% @products.each do |p| %>

		<div class="col-md-3">
		  	<div>
		  		<%= p.title %>
		  	</div>
		  	
		  	<div>
		  		<img src="<%= p.urlimage %>" class="img-responsive"/>
		  	</div>
		  	
		  	<div>
		  		<%= p.discription %>
		  	</div>
		  	<div>
		  		Size: <%= p.size %> cm
		  	</div>
		  	<div>
		  		Price: <%= p.price %> руб.
		  	</div>
		  	<div>
		  		<button class="btn btn-success btn-sm" onclick="add_to_cart('<%= p.id %>')">Добавить в корзину</button>
		  	</div>

		</div>

	<% end %>

</div>
<button class="btn btn-primary" onclick="something()">Click</button>

